<!--登录页-->
<view class="contain">
    <view class="hb-form-cells">
        <view class="tit-box">
            <view class="h1">欢迎登录</view>
            <view class="fs30 c9 mt5">Welcome to login</view>
        </view>
        <view class="weui-cells weui-cells_form">
            <view class="weui-cell">
                <view class="weui-cell__hd"><text class="weui-label">帐号</text></view>
                <view class="weui-cell__bd"><input type="text" placeholder="请输入身份证号" class="weui-input" /></view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd"><text class="weui-label">密码</text></view>
                <view class="weui-cell__bd"><input type="password" placeholder="请输入密码" class="weui-input" /></view>
            </view>
        </view>
        <view class="btn-primary mt80">立即登录</view>
        <view class="form-other mt60">
            <view class="weui-check__label cb">注册新用户</view>
            <view class="tr a-forget">忘记密码?</view>
        </view>
        <view class="other-login"><text class="line"></text><text class="txt">微信授权登录</text><text class="line"></text></view>
        <view class="login-enter tc"><image class="img" src="/images/wx-icon.png" alt=" " /></view>
    </view>
    <image class="login-box-img" src="/images/login-pic.jpg" alt=" " />
</view>
